<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona tu plan"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- RadioGroup con los planes -->
    <RadioGroup
        android:id="@+id/radioGroupPlanes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioGratuito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gratuito"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioPremium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium (acceso completo)" />
    </RadioGroup>

    <!-- BotÃ³n para guardar el plan -->
    <Button
        android:id="@+id/botonGuardarPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar plan"
        android:layout_marginTop="32dp"
        android:backgroundTint="#2962FF"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>
